<body>
    <h1>Eat-Da-Burger!</h1>

    <table>
        <tr>
            <th>Burger Name</th>
            <th><button type="submit">Devour it!</button></th>
            <th>Waiting to be Devoured</th>

        </tr>
        <tr>
            <th>
                <ul>
                    {{#each burger_name}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devoured=false}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </th>
            <th>
                <ul>
                    {{#each burger_name}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devoured=true}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </th>
        </tr>
    </table>
    <form id="create-form">
        <h2>Enter a burger you want to eat and click the "Submit" button.</h2>
        <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
        </div>
        <button type="submit">Submit</button>

    </form>

</body>